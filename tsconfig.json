{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018", "ESNext", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*","dist", "src/templates"]
}

